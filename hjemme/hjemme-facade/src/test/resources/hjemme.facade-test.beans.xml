<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns = "http://www.springframework.org/schema/beans"
       xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation = "http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id = "menuFacade" class = "nu.hjemme.facade.factory.MenuFacadeFactory">
        <property name = "menus">
            <list>
                <ref bean = "testMenu" />
            </list>
        </property>
    </bean>

    <bean id = "testMenu" class = "nu.hjemme.client.dto.MenuDto">
        <property name = "name" value = "testMenu" />
        <property name = "menuItems">
            <list>
                <ref bean = "testItem" />
            </list>
        </property>
    </bean>

    <bean id = "testItem" class = "nu.hjemme.client.dto.MenuItemDto">
        <property name = "name" value = "testParent" />
        <property name = "menuItemTarget" value = "bullseye" />
        <property name = "children">
            <list>
                <bean class = "nu.hjemme.client.dto.MenuItemDto">
                    <property name = "name" value = "testChild" />
                    <property name = "menuItemTarget" value = "bullseye?some=where" />
                </bean>
            </list>
        </property>
    </bean>

    <bean class = "org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name = "location">
            <value>environment.properties</value>
        </property>
    </bean>
</beans>
