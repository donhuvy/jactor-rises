<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
  xsi:schemaLocation="http://www.springframework.org/schema/beans
 http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

  <bean id="passwordPatterns" class="java.util.HashMap">
    <constructor-arg>
      <map>
        <entry key="numerals" value="[0-9]" />
        <entry key="characters" value="[a-zA-Z]" />
      </map>
    </constructor-arg>
  </bean>

  <bean id="defaultLocale" class="java.util.Locale">
    <constructor-arg value="en_GB" />
  </bean>

  <bean id="env.props" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
    <property name="locations">
      <list>
        <value>classpath:environment.properties</value>
      </list>
    </property>
  </bean>
</beans>
